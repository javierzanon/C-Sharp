<!doctype html>
<html lang="es">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="../css/bootstrap.min.css">

    <title>Foto</title>
</head>
<body>
  <main role="main">
      <section class="jumbotron">
          <div class="container">
              <h1 class="jumbotron-heading" style="text-align: left">
                  Subir Foto
              </h1>
          </div>
      </section>
      <div class="container">
        <div class="row">
          <div class="col-md-4">
            <p class="lead text-muted" style="text-align: center"></p>
              <form action="Foto" 
                    enctype="multipart/form-data" onsubmit="AJAXSubmit(this);return false;" 
                    method="post">
                  <dl>
                      <dt>
                          <label for="FileUpload_FormFile">Im√°gen</label>
                      </dt>
                      <dd>
                          <input id="formFile" type="file" 
                              name="formFile" />
                      </dd>
                  </dl>

                  <input class="btn" type="submit" value="Subir" />

                  <div style="margin-top:15px">
                      <output name="result"></output>
                  </div>
              </form>
            </p>
          </div>
          
        </div>
      </div>
    </main>
    <script>
      async function AJAXSubmit (oFormElement) {
        var resultElement = oFormElement.elements.namedItem("result");
        const formData = new FormData(oFormElement);

        try {
        const response = await fetch(oFormElement.action, {
          method: 'POST',
          body: formData
        });

        if (response.ok) {
          window.location.href = '/Mensaje/Gracias';
        }

        resultElement.value = 'Result: ' + response.status + ' ' + 
          response.statusText;
        } catch (error) {
          console.error('Error:', error);
        }
      }
    </script>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
</body>
</html>